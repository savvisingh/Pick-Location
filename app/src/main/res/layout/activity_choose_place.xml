<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.example.sarabjeetsingh.chooselocation.ChoosePlace">


    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:background="@drawable/searchview_bacground"
        android:hint=" Search"
        android:drawableLeft="@drawable/ic_search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   NearBy Places"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:padding="8dp"
        android:id="@+id/textView"
        android:drawableLeft="@drawable/ic_define_location"
        android:layout_below="@id/autoCompleteTextView"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:divider="#84000000"
        android:layout_below="@id/textView">

    </ListView>

</RelativeLayout>
